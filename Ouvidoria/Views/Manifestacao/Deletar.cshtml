@model Ouvidoria.Models.Manifestacao

@{
    ViewData["Title"] = "Deletar";
}
<br />
<h3 class="text-center">Clicando em 'deletar' você estará concordando em deletar essa manifestação permanentemente.</h3>
<br />
<div>   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Celular)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Celular)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Campus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Campus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Curso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Curso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Assunto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Assunto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Detalhe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Detalhe)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CadastradoEm)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CadastradoEm)
        </dd>
    </dl>
    
    <form asp-action="Deletar">
        <div class="form-group">
            <label class="control-label"></label>
            <div class="input-group">
                <div class="form-group" style="width: 50%">
                    <input type="submit" value="Deletar" class="btn btn-danger btn-block" />
                </div>
                <div class="form-group" style="width: 50%">
                    <a class="btn btn-success btn-block" asp-action="Index">Voltar</a>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="ManifestacaoId" />
        @Html.HiddenFor(model => model.ManifestacaoId)
        @Html.HiddenFor(model => model.Nome)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.Telefone)
        @Html.HiddenFor(model => model.Celular)
        @Html.HiddenFor(model => model.Campus)
        @Html.HiddenFor(model => model.Curso)
        @Html.HiddenFor(model => model.Assunto)
        @Html.HiddenFor(model => model.Detalhe)
    </form>
</div>
